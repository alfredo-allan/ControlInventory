{
    "version": 2,
    "installCommand": "pnpm install",
    "buildCommand": "pnpm run build:front",
    "outputDirectory": "client/dist",
    "routes": [
        {
            "src": "/assets/(.*)",
            "dest": "/assets/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}